#include <stdio.h>
#include <math.h>
#include <time.h>
#include <stdlib.h>

#define NADA 0
#define UNO 1
#define DOS 2
#define TRES 3
#define NMAX 100

int respuesta;

int menu();
void primerCodigo();
void segundoCodigo();
void terceroCodigo();

//-----------------MAIN----------------------------//
int main() {
	respuesta = menu();

	if(respuesta == UNO) {
		primerCodigo();
	}
	if(respuesta == DOS) {
		segundoCodigo();
	}
	if(respuesta == TRES) {
		terceroCodigo();
	}

	return 0;
}

//------------------Menu---------------------------//
int menu() {
	do {
		printf("\n---Bienvenido a mi codigo---\n");
		printf("\nPresiona 1 - cuadrados perfectos\n");
		printf("Presiona 2 - Adivina el numero\n");
		printf("Presiona 3 - Salir\n");
		scanf("%d",&respuesta);
	}
	while((respuesta != UNO && respuesta != DOS && respuesta != TRES));
	return respuesta;
}

//------------------PrimerCodigo---------------------------//
void primerCodigo() {
	int numero;

	do {
		printf("\n1-- Decime un numero para que te diga sus cuadrados perfectos (que no sea 0)\n");
		scanf("%d",&numero);
	}
	while(numero<=0);

	int raizNumero = (int)sqrt(numero);
	int h;
	printf("\nTodos los cuadrados perfectos son:\n");
	for(h=raizNumero; h>=0; h--) {
		printf("%d\n",h*h);
	}
}

//------------------SegundoCodigo---------------------------//
void segundoCodigo() {
	int numero2;
	int numeroSecreto;
    int cantidadDeIntentos=UNO;
    
	printf("\n2-- Tengo un numero del 1 al %d para que adivines\n", NMAX);
	srand(time(NULL));
	numeroSecreto = rand() % NMAX + UNO;

	do {
		do {
			printf("Cual es tu intento?\n");
			scanf("%d",&numero2);
		}
		while((numero2<=0)||(numero2>NMAX));
        
		if(numero2>numeroSecreto) {
		    printf("\n--Intento numero: %d\n",cantidadDeIntentos++);
			printf("\nTe pasaste del numero\n");
		}
		if(numero2<numeroSecreto) {
		    printf("\n--Intento numero: %d\n",cantidadDeIntentos++);
			printf("\nTe falta para llegar al numero\n");
		}
		
	}
	while(numero2!=numeroSecreto);
	printf("\n----Felicidades adivinaste el numero en %d intentos----\n",cantidadDeIntentos);
}

//------------------TercerCodigo---------------------------//
void terceroCodigo() {
	printf("\nChau \n");
}
