#include <stdio.h>

#define UNO 1

void Invertir(char origen[], char destino[]);

int main() {
    char cadena[100], invertida[100];

    printf("\n--------------Bienvenido a mi programa--------------\n");
    printf("\n-En este codigo voy a invertir un texto y mostrarlo al reves:\n\n");

    printf("Ingrese un texto: ");
    fgets(cadena, 100, stdin);

    Invertir(cadena, invertida);

    printf("\nTexto invertido: %s\n", invertida);

    return 0;
}

void Invertir(char origen[], char destino[]) {
    int len = 0;

    while (origen[len] != '\0' && origen[len] != '\n') {
        len += UNO;
    }

    for (int i = 0; i < len; i++) {
        destino[i] = origen[len - UNO - i];
    }

    destino[len] = '\0';
}
